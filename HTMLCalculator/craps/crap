        window.onload = function () {
            root = document.querySelector('.taschenrechner');
            display = root.querySelector('.display');
            equation = root.querySelector('.equation');
            tasten = root.querySelector('.tasten');
        };
















        let root = null;
        let display = null;
        let equation = null;

        document.ready(function () {
            window.onload = function () {
                root = document.getElementById("taschenrechner");
                display = root.querySelector('.display');
                equation = root.querySelector('.equation');
            }
        })

        (function () {
            //Cache for first Value
            let value;
            //Operator
            let operation;

            root.querySelectorAll('.tasten > .number.btn').forEach(element => {
                element.onclick = function () {
                    display.innerHTML += element.value;
                }
            });

            root.querySelectorAll('.tasten > .number.operation').forEach(element => {
                element.onclick = function () {
                    value = display.innerHTML.value();
                    display.innerHTML = null;
                    equation.innerHTML = value + operation;
                }
            }
        );
        })







js functions

    function number(zahl) {
        display.innerHTML += zahl;
    }

    function plus() {
        if (display.innerHTML) {
            value = display.innerHTML;
            display.innerHTML = null;
            equation = value + operation;
        }
    }


    function c() {
        display.innerHTML = '';
        equation.innerHTML = '';
    }

    function ce() {
        display.innerHTML = '';
    }

